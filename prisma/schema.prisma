generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  firstName    String
  lastName     String
  password     String
  role         String    @default("user")
  refreshToken String?
  
  // Many-to-many relationship: owner-employee
  ownedEmployees  OwnerEmployee[] @relation("Owner")
  employeeOf       OwnerEmployee[] @relation("Employee")
  
  // Expense relationships
  expenses     Expense[]
  budgets      Budget[]
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("users")
}

// Junction table for many-to-many owner-employee relationship
model OwnerEmployee {
  id         Int      @id @default(autoincrement())
  ownerId    Int      // Owner user ID
  employeeId Int      // Employee user ID
  owner      User     @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  employee   User     @relation("Employee", fields: [employeeId], references: [id], onDelete: Cascade)
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([ownerId, employeeId]) // Prevent duplicate assignments
  @@index([ownerId])
  @@index([employeeId])
  @@map("owner_employees")
}

// ExpenseCategory model kept for backward compatibility but not used in new API
// Categories are now stored as strings in Expense model
model ExpenseCategory {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  color       String?   // For UI display
  icon        String?   // For UI display
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([name])
  @@map("expense_categories")
}

model Expense {
  id          Int       @id @default(autoincrement())
  title       String?   // Required: expense title (optional for migration compatibility)
  amount      Decimal   @db.Decimal(10, 2) // Supports up to 99,999,999.99
  description String?
  date        DateTime  @default(now())
  category    String?   // Category as string: Food, Transport, Entertainment, Bills, Shopping, Health, Education, Other (optional for migration)
  
  // Relationships
  userId      Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([date])
  @@index([category])
  @@map("expenses")
}

model Budget {
  id          Int       @id @default(autoincrement())
  amount      Decimal   @db.Decimal(10, 2)
  period      String    @default("monthly") // daily, weekly, monthly, yearly
  
  // Relationships
  userId      Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([period])
  @@unique([userId, period]) // One budget per user per period
  @@map("budgets")
}
