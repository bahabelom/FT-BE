generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  firstName    String
  lastName     String
  password     String
  role         String    @default("user")
  refreshToken String?
  
  // Hierarchical relationship: owner-employee
  ownerId      Int?      // ID of the owner (null for owners themselves)
  owner        User?     @relation("OwnerEmployees", fields: [ownerId], references: [id], onDelete: Cascade)
  employees    User[]    @relation("OwnerEmployees")
  
  // Expense relationships
  expenses     Expense[]
  budgets      Budget[]
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([ownerId])
  @@map("users")
}

// ExpenseCategory model kept for backward compatibility but not used in new API
// Categories are now stored as strings in Expense model
model ExpenseCategory {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  color       String?   // For UI display
  icon        String?   // For UI display
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([name])
  @@map("expense_categories")
}

model Expense {
  id          Int       @id @default(autoincrement())
  title       String?   // Required: expense title (optional for migration compatibility)
  amount      Decimal   @db.Decimal(10, 2) // Supports up to 99,999,999.99
  description String?
  date        DateTime  @default(now())
  category    String?   // Category as string: Food, Transport, Entertainment, Bills, Shopping, Health, Education, Other (optional for migration)
  
  // Relationships
  userId      Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([date])
  @@index([category])
  @@map("expenses")
}

model Budget {
  id          Int       @id @default(autoincrement())
  amount      Decimal   @db.Decimal(10, 2)
  period      String    @default("monthly") // daily, weekly, monthly, yearly
  
  // Relationships
  userId      Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([period])
  @@unique([userId, period]) // One budget per user per period
  @@map("budgets")
}
